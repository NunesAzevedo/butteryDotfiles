############################
# Gerador de .clang-format #
############################
# Google
alias clang-google='clang-format --style=Google --dump-config > .clang-format'

# LLVM  
alias clang-llvm='clang-format --style=LLVM --dump-config > .clang-format'

# GNU
alias clang-gnu='clang-format --style=GNU --dump-config > .clang-format'

# Allman
alias clang-allman='clang-format --style="{BasedOnStyle: LLVM, BreakBeforeBraces: Allman, IndentWidth: 4}" --dump-config > .clang-format'

# Microsoft
alias clang-microsoft='clang-format --style=Microsoft --dump-config > .clang-format'

# WebKit
alias clang-webkit'clang-format --style=WebKit --dump-config > .clang-format'

# Chromium
alias clang-chromium='clang-format --style=Chromium --dump-config > .clang-format'



# Atalhos para Python
alias p='python3'

# Warthog
alias sslgameController='cd ~/Warthog/3rdparty/ssl-game-controller && make run'

